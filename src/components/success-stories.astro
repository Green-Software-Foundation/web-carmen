---
import SuccessStoriesCarouselReact from "@/components/react/success-stories-carousel";
---

<section id="success-stories" class="py-12 md:py-16 lg:py-20 bg-accent-lighter/10">
  <div class="container">
    <div class="mb-10 text-center md:mb-12">
      <h2 class="text-2xl font-semibold md:text-3xl lg:text-4xl">
        Real-World Carbon Measurement
      </h2>
      <p class="mt-4 text-lg text-muted-foreground max-w-3xl mx-auto">
        See how organizations are using carbon measurement tools to understand and reduce their cloud infrastructure's environmental impact.
      </p>
    </div>
    
    <SuccessStoriesCarouselReact client:load />
  </div>
</section>
