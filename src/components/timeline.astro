---
import clsx from "clsx";
import TimelineTrack from "@/components/react/timeline-track";
import CheckIcon from "@/assets/check-icon.svg";

const timelineItems = [
  {
    date: "2022",
    description: `Amadeus Joins GSF`,
    icon: CheckIcon,
    start: "2022-01-01",
    end: "2022-12-31",
  },
  {
    date: "2023",
    description: `Carmen Development Begins`,
    icon: CheckIcon,
    start: "2023-01-01",
    end: "2023-12-31",
  },
  {
    date: "2024",
    description: `Internal Deployment at Amadeus`,
    icon: CheckIcon,
    start: "2024-01-01",
    end: "2024-12-31",
  },
  {
    date: "2025",
    description: `Open Source Release`,
    icon: CheckIcon,
    start: "2025-01-01",
    end: "2025-03-31",
  },
  {
    date: "Q1 2025",
    description: `GSF Project Transfer`,
    icon: CheckIcon,
    start: "2025-01-01",
    end: "2025-03-31",
  },
  {
    date: "2025+",
    description: `Community Growth`,
    start: "2025-04-01",
    end: "2026-12-31",
  },
];
---

<section class="bg-white py-12 md:py-18 lg:py-20">
  <div class="container">
    <div class="mx-auto max-w-3xl">
      <h2 class="text-center text-2xl font-semibold md:text-3xl lg:text-4xl">
        Carmen's Journey
      </h2>
      <p class="mt-3 text-center text-lg md:mt-4 md:text-xl">
        From enterprise-grade tool at Amadeus to open-source Green Software Foundation projectâ€”join us in building the future of cloud carbon measurement.
      </p>
    </div>
    <div class="relative mt-12 md:mt-18 lg:mt-20">
      <TimelineTrack
        client:load
        count={timelineItems.length}
        activeIndex={4}
      />
      <ol class="grid grid-cols-1 gap-6 md:grid-cols-7 md:gap-4 lg:gap-6">
        {
          timelineItems.map((item, index) => (
            <li class="relative flex flex-col items-center gap-3 text-center md:gap-4">
              <div class="relative">
                {item.description === "Current" && (
                  <span class="absolute -inset-2 inline-block animate-ping rounded-full bg-primary/40" />
                )}
                <div
                  data-timeline-dot
                  class={clsx(
                    "relative z-10 flex size-8 items-center justify-center rounded-full bg-accent-lighter text-white",
                    {
                      "bg-primary": index <= 4,
                    }
                  )}
                >
                  {item.icon && <item.icon />}
                </div>
              </div>
              <div>
                <h3 class="mb-2 text-xl font-bold text-primary">{item.date}</h3>
                <p set:html={item.description} class="text-sm" />
              </div>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</section>
